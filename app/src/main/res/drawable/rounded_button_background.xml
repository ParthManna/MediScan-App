<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#4A90E2"/> <!-- Calming Blue -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E3F2FD"/> <!-- Light Sky Blue -->
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="#2196F3" /> <!-- Blue Accent Border -->
        </shape>
    </item>
</selector>
