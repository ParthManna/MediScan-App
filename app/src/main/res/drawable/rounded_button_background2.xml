<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#4A90E2"/> <!-- Calming Blue -->
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/> <!-- Light Sky Blue -->
            <corners android:radius="10dp" />
            <stroke android:width="0.5dp" android:color="#575454" /> <!-- Blue Accent Border -->
        </shape>
    </item>
</selector>
